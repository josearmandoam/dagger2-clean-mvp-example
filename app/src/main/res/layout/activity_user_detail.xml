<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_user_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="es.voghdev.prjdagger2.ui.activity.UserDetailActivity">
    <ImageView
        android:id="@+id/user_detail_userImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@color/light_gray"
       />
    <TextView
        android:id="@+id/user_detail_tv_title_name"
        android:textColor="@android:color/background_dark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:layout_toRightOf="@+id/user_detail_userImage"
        android:layout_marginLeft="@dimen/user_data_margin_left"/>
    <TextView
        android:id="@+id/user_detail_tv_data_name"
        android:layout_marginTop="@dimen/user_data_margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/user_detail_userImage"
        android:layout_marginLeft="@dimen/user_data_margin_left"
        android:layout_below="@+id/user_detail_tv_title_name"/>
    <TextView
        android:id="@+id/user_detail_tv_title_address"
        android:layout_marginTop="@dimen/user_data_margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/user_detail_userImage"
        android:layout_below="@id/user_detail_tv_data_name"
        android:text="@string/user_address"
        android:layout_marginLeft="@dimen/user_data_margin_left"
        android:textColor="@android:color/background_dark"/>
    <TextView
        android:id="@+id/user_detail_tv_data_address"
        android:layout_marginTop="@dimen/user_data_margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/user_detail_userImage"
        android:layout_below="@+id/user_detail_tv_title_address"
        android:layout_marginLeft="@dimen/user_data_margin_left"
        />
    <TextView
        android:id="@+id/user_detail_tv_title_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_detail_tv_data_address"
        android:layout_toRightOf="@+id/user_detail_userImage"
        android:text="@string/user_name"
        android:textColor="@android:color/background_dark"
        android:layout_marginLeft="@dimen/user_data_margin_left"
        />
    <TextView
        android:id="@+id/user_detail_tv_data_username"
        android:layout_marginTop="@dimen/user_data_margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/user_detail_userImage"
        android:layout_below="@id/user_detail_tv_title_username"
        android:layout_marginLeft="@dimen/user_data_margin_left"
        />
    <TextView
        android:id="@+id/user_detail_tv_title_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_thumbnail"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/user_detail_userImage"
        android:layout_marginTop="@dimen/user_data_margin_left"
        />
    <TextView
        android:id="@+id/user_detail_tv_data_thumbnail"
        android:layout_marginTop="@dimen/user_data_margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_detail_tv_title_thumbnail"
        />
    <TextView
        android:id="@+id/user_detail_tv_title_facebookId"
        android:layout_marginTop="@dimen/user_data_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_facebookId"
        android:layout_below="@+id/user_detail_tv_data_thumbnail"
        android:textColor="@android:color/background_dark"
        />
    <TextView
        android:id="@+id/user_detail_tv_data_facebookId"
        android:layout_marginTop="@dimen/user_data_margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_detail_tv_title_facebookId"
        />
    <TextView
        android:id="@+id/user_detail_tv_title_email"
        android:layout_marginTop="@dimen/user_data_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/user_email"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/user_detail_tv_data_facebookId"
        />
    <TextView
        android:id="@+id/user_detail_tv_data_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_detail_tv_title_email"
        />
    <ProgressBar
        android:id="@+id/user_detail_pbr_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>
</RelativeLayout>
